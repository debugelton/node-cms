<!DOCTYPE html>
<html lang="en">
    <head>
        <include(data.includes.header)/>
    </head>
    <body>
        <div class="content">
            <div class="page-wrapper container">
                <div class="row">
                    <h1 class="col-xs-12 display-2"><i class="icon-plant-branch-with-leaves"></i>${data.title}</h1>
                    <include(data.includes.main_menu)/>
                    <p class="col-xs-12">Welcome sdsd to ${data.title}</p>
                </div>
                <div class="row">
                    <form class="col-xs-12" method="post" action="">
                        <div class="form-group row">
                            <label class="col-xs-12 col-md-4 form-control-label" for="title">Seiten-Titel</label>
                            <div class="col-xs-12 col-md-8">
                                <input type="text" class="form-control" id="title" name="title" value=(data.params && data.params.title) placeholder="Seiten Titel">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-xs-12 col-md-4 form-control-label" for="route">Route</label>
                            <div class="col-xs-12 col-md-8">
                                <input type="text" class="form-control" id="route" name="route" value=(data.params && data.params.route) placeholder="z.B. /blog">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-secondary">Speichern</button>
                            </div>
                        </div>
                    </form>
                </div>
                <ul class="row" if(notEmpty(data.sites))>
                    <li class="col-xs-12" for(site in data.sites)>
                        <div class="row">
                            <p class="col-xs-12 col-sm-4">${site.title}</p>
                            <p class="col-xs-12 col-sm-4">${site.route}</p>
                            <div class="col-xs-12 col-sm-4">
                                <a type="submit" href="/site/delete?route=${site.route}">Delete</a>
                            </div>
                        </div>
                    </li>   
                </ul>
            </div>
        </div>
    </body>
</html>
extends layout

block content
    div(class="page-wrapper container")
        nav(class="row")
            div(class="col-xs-12")
                ul(class="row")
                    li(class="col-xs-4")
                        a(href="#") Menu
                    li(class="col-xs-4")
                        a(href="#") Menu
                    li(class="col-xs-4")
                        a(href="#") Menu
                    li(class="col-xs-4")
                        a(href="#") Menu
        div(class="row")
            h1(class="col-xs-12 display-2")= title
            p(class="col-xs-12") Welcome to #{title}
            p(class="col-xs-12") Hello again an
            hr(class="col-xs-12")
            form(action="", method="", class="col-xs-12 form-inline")
                fieldset(class="form-group")
                    input(type="text", class="search-field form-control", placeholder="Seite durchsuchen")
                    button(type="submit", class="btn btn-primary") Go!
            hr(class="col-xs-12")
            each item in articles
                div(class="col-xs-6")
                    div(class="teaser")
                        img(class="timage", src="http://www.fillmurray.com/200/300")
                        div(class="theadline")
                            h3 #{item.title}
                        div(class="tinfo")
                            p Teaser Info
                        div(class="tfooter")
                            p Teaser Footer
                        div(class="tlink")
                            a(href="#") Teaser link
            hr(class="col-xs-12")
            div(class="col-xs-12")
                div(class="blog row")
                    h1(class="col-xs-12 display-2")= title
                    h2(class="col-xs-12") Welcome to #{titlei}
                    p3(class="col-xs-12") Hello again an
            hr(class="col-xs-12")
            div(class="col-xs-12")
                div(class="detail row")
                    h1(class="col-xs-12 display-2") Crisanthemum Xkdkkd
                    img(class="", src="http://www.fillmurray.com/200/300")
                    h2(class="col-xs-12") Deutsch: Crisantheme
                    p(class="col-xs-12 lead") Beschreibung